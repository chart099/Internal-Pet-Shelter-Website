<div>
    {{#if logged_in}}
    {{#each shelters as |shelter|}}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{shelter.username}}</h5>
            <a href="/shelter/{{shelter.id}}" class="btn btn-primary">View Location</a>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Add New Location</h2>

        <form class="form new-location-form">
            <div class="form-group">
                <label for="username-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/newLocation.js"></script>