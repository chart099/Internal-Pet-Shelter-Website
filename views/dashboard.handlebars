<div id= "shelter-area">
    {{#if logged_in}}
    {{#each shelters as |shelter|}}
    <div class="card shelter-card" style="width: 18rem;">
        <div>
            {{!-- <img src="/public/photos/image_480.png" alt="AC Logo"> --}}
            <h5 class="card-title">{{shelter.username}}</h5>
            <a href="/shelter/{{shelter.id}}" class="view-location">View Available Cats</a>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>
<div class="sign-up-area">
        <h2>Add New Location</h2>

        <form class="new-location-form">
            <div class="new-location">
            <div class="location-username">
                <label for="username-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="location-password">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            </div>
        </form>
        <button class="btn btn-primary" type="submit">Add</button>
</div>
<script src="./js/newLocation.js"></script>

